<% unless current_user == user %>
  <% if current_user.following? %>
    <% form_with(model: current_user.relationships.find_by(follow_id: :user_id), local: true, method: :delete)do |f|%>
      <% hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォロー解除', class: 'btn btn-default btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.relationships.build, local: true)do |f|%>
      <%= f.submit 'フォローする', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>
