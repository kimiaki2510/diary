<% if logged_in? %>
<h1>日記一覧</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= link_to record.title, record %></td>
          <td><%= record.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to '日記を書く', new_record_path, class: "btn btn-primary" %>

<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>ようこそ日記アプリへ</h1>
    <%= link_to '始める', signup_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>
<% end %>
