<% if logged_in? %>
  <h1>日記一覧</h1>
  <table class="table table-striped">
    <thead>
      <p>ユーザー名</p>
      <tr>
        <th>タイトル</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= link_to record.title, record %></td>
          <td><%= record.content %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
  <%= link_to new_record_path, class: "btn btn-primary" do %>
  <i class="fas fa-pen"></i>
  <% end %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ようこそ日記アプリへ</h1>
      <%= link_to 'さっそく使い始める', signup_path, class: 'btn btn-primary btn-lg' %>
      <h4>登録のページへ移動します</h4>
    </div>
  </div>
<% end %>
